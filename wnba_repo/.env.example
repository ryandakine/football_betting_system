# WNBA Betting System - Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Odds API (The Odds API - https://the-odds-api.com)
ODDS_API_KEY=your_odds_api_key_here

# Optional: AI Services (for enhanced analysis)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GROK_API_KEY=your_grok_key_here

# Bankroll Configuration
WNBA_BANKROLL=50000.0
WNBA_UNIT_SIZE=500.0

# System Configuration
WNBA_MIN_EDGE_THRESHOLD=0.06
WNBA_CONFIDENCE_THRESHOLD=0.62
WNBA_MAX_EXPOSURE=0.08

# Performance
WNBA_WORKERS=3
WNBA_BATCH_SIZE=6
WNBA_TIMEOUT=25

# Alerts
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false
ENABLE_PLAYER_NEWS_ALERTS=true
ALERT_FREQUENCY=immediate

# WNBA Season Configuration
# Regular season: Mid-May through Mid-September
# Playoffs: Late September - Mid-October
WNBA_SEASON_START=2025-05-15
WNBA_SEASON_END=2025-09-15
