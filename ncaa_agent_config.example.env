# NCAA Betting Agent Configuration
# Copy this to .env and fill in your values

# Required API Keys
CFB_DATA_API_KEY=your_college_football_data_api_key_here
ODDS_API_KEY=your_odds_api_key_here  # Optional

# Betting Parameters
NCAA_BANKROLL=10000
NCAA_MIN_EDGE=0.03
NCAA_MIN_CONFIDENCE=0.60
NCAA_MAX_BET_PERCENT=0.15

# Agent Behavior
NCAA_AUTO_COLLECT=true
NCAA_AUTO_GENERATE_PICKS=true
NCAA_AUTO_TRACK_RESULTS=true

# Scheduling (which days to run)
NCAA_RUN_DAYS=tuesday,wednesday,saturday

# Notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_ALERTS=your_email@example.com
