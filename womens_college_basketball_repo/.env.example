# Women's College Basketball Betting System - Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Odds API (The Odds API - https://the-odds-api.com)
ODDS_API_KEY=your_odds_api_key_here

# Optional: AI Services (for enhanced analysis)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GROK_API_KEY=your_grok_key_here

# Optional: Weather API (minimal impact for indoor basketball)
WEATHER_API_KEY=your_weather_api_key_here

# Bankroll Configuration
WCBB_BANKROLL=50000.0
WCBB_UNIT_SIZE=500.0

# System Configuration
WCBB_MIN_EDGE_THRESHOLD=0.05
WCBB_CONFIDENCE_THRESHOLD=0.58
WCBB_MAX_EXPOSURE=0.10

# Performance
WCBB_WORKERS=4
WCBB_BATCH_SIZE=12
WCBB_TIMEOUT=25

# Alerts
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false
ALERT_FREQUENCY=immediate
